@model Patient_Record.Areas.Patient_Settings.Models.Patient

@{
    ViewBag.TiTle = "Add Patient";
}
<div class="col-12">
    <div class="row paddingRight5 justify-content-end">
        <span class="btn btn-bg-success">
            @Html.ActionLink("Go To List", "Index")
        </span>
    </div>
    <div class="row margin0 padding30-20">
        <div class="col-md-12">
            <form asp-controller="Patient" asp-action="Create" method="post" class="row justify-content-center margin0">
                <div asp-validation-summary="All" class="text-danger col-12"></div>
                <div class="form-group col-5">
                    <label asp-for="Patient_Name" class="control-label">@Html.DisplayNameFor(model => model.Patient_Name)</label>
                    <input asp-for="Patient_Name" class="form-control" />
                    <span asp-validation-for="Patient_Name" class="text-danger"></span>
                </div>
                <div class="form-group col-5">
                    <label asp-for="Patient_Official_ID" class="control-label">@Html.DisplayNameFor(model => model.Patient_Official_ID)</label>
                    <input asp-for="Patient_Official_ID" class="form-control" />
                    <span asp-validation-for="Patient_Official_ID" class="text-danger"></span>
                </div>
                <div class="form-group col-5">
                    <label asp-for="Patient_DOB" class="control-label">@Html.DisplayNameFor(model => model.Patient_DOB)</label>
                    <input asp-for="Patient_DOB" class="form-control" />
                    <span asp-validation-for="Patient_DOB" class="text-danger"></span>
                </div>
                <div class="form-group col-5">
                    <label asp-for="Patient_Email" class="control-label">@Html.DisplayNameFor(model => model.Patient_Email)</label>
                    <input asp-for="Patient_Email" class="form-control" />
                    <span asp-validation-for="Patient_Email" class="text-danger"></span>
                </div>
                <div class="form-group col-10">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
           
        </div>
    </div>


</div>

<hr />


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
