@model IEnumerable<Patient_Record.Areas.Patient_Settings.ViewModel.PatientList>

@{
    ViewBag.TITLE = "Patient List";
}

<div class="col-12 right">
    <p class="btn btn-bg-success">
        @Html.ActionLink("Add New Patient", "Create")
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Patient_Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Patient_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Patient_DOB)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Patient_Record_Id)
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (PatientList item in ViewBag.patientList)
            {
            <tr>
                <td>
                    @item.Patient_Id
                </td>
                <td>
                    @item.Patient_Name
                </td>
                <td>
                    @item.Patient_DOB
                </td>
                <td>
                    @item.Patient_Record_Id
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Patient_Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Patient_Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Patient_Id })
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>

