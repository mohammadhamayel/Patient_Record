@model Patient_Record.Areas.Patient_Settings.Models.Patient_Records

@{
    ViewData["Title"] = "Edit Patient Record";
}


<div class="col-12">
    <div class="row margin0 justify-content-end paddingRight5">
        <span class="btn btn-bg-success">
            <a asp-action="Index">Go to List</a>
        </span>
    </div>
    <div class="row margin0">
        <div class="col-12">
            <form asp-action="Edit" class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col-5">
                    <label asp-for="Patient_Record_Id" class="control-label"></label>
                    <input asp-for="Patient_Record_Id" class="form-control" readonly/>
                    <span asp-validation-for="Patient_Record_Id" class="text-danger"></span>
                </div>
                <div class="form-group col-5">
                    <label asp-for="Patient_Id" class="control-label"></label>
                    <select asp-for="Patient_Id" class="form-control" asp-items="@ViewBag.Patients">
                    </select>
                    <span asp-validation-for="Patient_Id" class="text-danger"></span>
                </div>
                <div class="form-group col-5">
                    <label asp-for="Disease_Name" class="control-label"></label>
                    <input asp-for="Disease_Name" class="form-control" />
                    <span asp-validation-for="Disease_Name" class="text-danger"></span>
                </div>
                <div class="form-group col-5">
                    <label asp-for="Time_Of_Entry" class="control-label"></label>
                    <input asp-for="Time_Of_Entry" class="form-control" />
                    <span asp-validation-for="Time_Of_Entry" class="text-danger"></span>
                </div>
                <div class="form-group col-5">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group col-5">
                    <label asp-for="Bill" class="control-label"></label>
                    <input asp-for="Bill" class="form-control" />
                    <span asp-validation-for="Bill" class="text-danger"></span>
                </div>
                <div class="form-group col-10">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
