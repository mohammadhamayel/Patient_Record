@model IEnumerable<Patient_Record.Areas.Patient_Settings.Models.Patient_Records>

@{
    ViewBag.Title = "Patient Record List";
}

<div class="col-12">
    <div class="row margin0 justify-content-end">
        <p class="btn btn-bg-success">
            <a asp-action="Create">Create New</a>
        </p>
    </div>
    <div class="row margin0 ">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Patient_Record_Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Patient_Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Disease_Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Time_Of_Entry)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Bill)
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Patient_Record_Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Patient_Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Disease_Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Time_Of_Entry)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Bill)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Patient_Record_Id }) |
                            @Html.ActionLink("Details", "Details", new {  id=item.Patient_Record_Id }) |
                            @Html.ActionLink("Delete", "Delete", new {  id=item.Patient_Record_Id })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
